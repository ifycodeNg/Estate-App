<%- include('./partial/header'); %>

      <div class=" ">
 
      <p class="text-center m-8 font-bold">
         All Domestic Staffs
       </p>
        <a
        href="/resident/dashboard/add"
        class=" bg-gray-900 text-white font-bold py-2 px-4  rounded"
      >
       Add Staff</a
      >
      </div>
    
     <div class="overflow-x-auto">
        
     
        <table class="overflow-x mt-5  shadow-lg bg-white">
        <tr>
          <th class="bg-blue-100 border text-left px-8 py-4">S/N</th>
             <th class="bg-blue-100 border text-left px-8 py-4">Profile Pics</th>
          <th class="bg-blue-100 border text-left px-8 py-4">Full Name</th>
          <th class="bg-blue-100 border text-left px-8 py-4">Telephone</th>

          <th class="bg-blue-100 border text-left px-8 py-4">Home Address</th>
          <th class="bg-blue-100 border text-left px-8 py-4">Origin</th>
          <th class="bg-blue-100 border text-left px-8 py-4">Status</th>
          <th class="bg-blue-100 border text-left px-8 py-4">Action</th>
        </tr>

        <% if (body){%> <% for (let i=0; i < body.length; i++){%>
        <tr>
      <tr>
          <td class="border px-8 py-4"><%=(i +1)%></td>
          <td class="border md:px-8 sm:px-0 ">
<% if (body[i].image ){%>
                                
  <img src=/upload/<%=body[i].image%> class="object-cover rounded-full sm:ml-2" style="height:70px; width:70px;" alt=""/>
                               
                         
                             
                                                                          
                                    <% } %>

                                        <% if (body[i].image ==null){%>
                                                                        
                             <img src="/img/avatar.svg" height="50"  width="50" alt="">
                               
                                                                          
                                    <% } %>

                              </td>
          <td class="border px-8 "><%=body[i].fullname%></td>
          <td class="border px-8 "><%=body[i].telephone%></td>

        
          <td class="border px-8 "><%=body[i].address%></td>
          <td class="border px-8 "><%=body[i].location%></td>
          <td class="border px-8 "><%=body[i].status%></td>
          <td class="border px-8 py-4 flex">
            <a
              class="rounded bg-red-700 px-6 py-2"
              href="#"
              id="delete-btn"
              onclick="get_id(<%=body[i].DomId%>)"
              ><span class="font-bold">Delete</span></a
            >
            <a
              class="rounded border-2 border-grey-300 px-6 py-2  ml-2 "
              href="/resident/edit/domestic/<%=body[i].DomId%>"
            >
              <span class="font-bold">Edit</span>
            </a>
          </td>
        </tr>
        <% } %> <% } %>
      </table>
     </div>
    </main> 
    <div id="overly" class="hidden bg-black bg-opacity-50 absolute inset-0 flex justify-center items-center ">
      <div class="bg-gray-200 max-w-sm py-5 px-4 ml-10  rounded shadow-xl">
        <div class="flex justify-between items-center">
          <h4 class="text-lg font-bold"> Delete
            </h4>
        </div>
            <div class="mt-2 text-sm">
              <p>Confirm to Delete Domestic Staff ?</p>
            </div>
            <div class="mt-3 flex justify-end space-x-3">
              <button id="cancel"  class="px-3 py-1  rounded hover:bg-red-300 hover:bg-opacity-50 hover:text-red-800">Cancel</button>
              <button  class="hover:bg-red-600 px-3 py-1 bg-red-800 rounded text-gray-200" onclick="delete_id()">Proceed</button>
            </div>
      </div>
      
        </div>
       
    </div>
     
  </body>
  <script>
  let value
  function get_id(id) {
    value=id
    return value
  } 

  function delete_id() {
     let xhr = new XMLHttpRequest()
            xhr.onload = () => {
                 alert(xhr.responseText)
                  location.reload()
             
            }

            xhr.open("delete", `/resident/delete/domestic/${value}`, true);
            xhr.send(
                
            )
    

  }
let overly=document.getElementById("overly")
let btn=document.getElementById("delete-btn")
let cancel=document.getElementById("cancel")
btn.addEventListener("click",()=>{

  overly.classList.remove('hidden')
})
cancel.addEventListener("click",()=>{
  
  overly.classList.add('hidden')
  
})


  </script>
</html>
