</body>


    <script>
function checked() {
  let roles=[]
   let check=document.getElementById("check").querySelectorAll("input")
console.log(check)
for(let i=0;i<check.length;i++){
  console.log(check[i].checked)
  if(check[i].checked){
    console.log(check[i].name)
    
    roles.push(check[i].name)
  }
  else{

  }
}
return roles.sort()
}
 


window.addEventListener("load",()=>{
    let xhr = new XMLHttpRequest();
      let user_name=document.getElementById("user_name")   
let user_role=document.getElementById("user_role")
          xhr.onload = () => {
              let data=JSON.parse(xhr.responseText)
       
user_name.textContent=data[0].fullname

         };

        xhr.open("get", `/api/user`, true);
        xhr.send(); 
         

 })



      function load() {

        let snackBar=document.getElementById("snackbar")
        let text=document.getElementById("text")
        let btn = document.getElementById("submit");
        let form=document.getElementById("form")
        form.addEventListener("submit",(e)=>{
        e.preventDefault()
        btn.classList.add("loading")
        btn.disabled=true
        text.style.visibility="hidden"    

        })
        let obj = {
          email: document.getElementById("email"),
          telephone: document.getElementById("telephone"),
          name: document.getElementById("name"),
          role:checked(),
        };
       let requestObj =
          "email=" +
          obj.email.value +
          "&telephone=" +
          obj.telephone.value +
          "&name=" +
          obj.name.value +
          "&role=" +
          obj.role;

        let xhr = new XMLHttpRequest();
        xhr.onload = () => {
          obj.email.value = "";
          obj.telephone.value = "";
          obj.name.value = "";
         
          btn.disabled=false
          snackBar.innerText = ` ${xhr.responseText}`
          text.style.visibility="visible"
          snackBar.className="show"
                btn.classList.remove("loading")
                setTimeout(()=>{
                    snackBar.className=snackBar.className.replace("show","")

                },3000)  
        };

        xhr.open("post", "/admin/add/user", true);
        xhr.setRequestHeader(
          "Content-Type",
          "application/x-www-form-urlencoded"
        );
        xhr.send(requestObj);
  }

    </script>
   
  </body>
</html>
