<%- include('./partial/header') %>
      <main>
        <div class="main-container">
         

 
          <div class="charts">
            <div class="charts-left">
              <div class="chart-left-title">
                <div>
                  <h1 class="head">All Shuttle Bus Drivers</h1>

                  <section class="recent">
                    <div class="activity-grid">
                      <div class="activity-card">
                        <table>
                          <thead>
                            <tr>
                              <th>S/N</th>
                              <th>Name</th>
                              <th>Telephone Number</th>

                              <th>Name Of Employee</th>
                              <th>Address</th>
                              <th>Vehicle Number</th>
                              <th>Vehicle Type</th>
                              <th>Location</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% if (body){%> <% for (let i=0; i < body.length;
                            i++){%>
                            <tr>
                              <td><%=(i +1)%></td>
                              <td><%=body[i].fullname%></td>
                              <td><%=body[i].telephone%></td>
                              <td><%=body[i].employee%></td>

                              <td><%=body[i].address%></td>

                              <td><%=body[i].vehicle_no%></td>
                              <td><%=body[i].vehicle_type%></td>
                              <td><%=body[i].location%></td>
                            </tr>
                            <% } %> <% } %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </section>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
      
